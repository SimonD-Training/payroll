                <button
                  type="submit"
                  value="submit"
                  class="rounded-sm p-2 border text-white"
                >
                  Generate Salary Information
                </button>
              </form>
            </div>
            <div>
              <table>
                <thead>
                  <tr>
                    <th>Supervisor ID</th>
                    <th>Pay Cycle</th>
                    <th>Hours</th>
                    <th>Salary</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>0043233264</td>
                    <td>28/06/2022</td>
                    <td>40.00</td>
                    <td>727.63</td>
                    <td>
                      <button
                        type="submit"
                        value="submit"
                        class="bg-[#266785] rounded"
                      >
                        <span><i class="fa-solid fa-pencil"></i></span>
                        Edit Supervisor
                      </button>
                    </td>
                  </tr>
                  <tr>
                    <td><input type="text" /></td>
                    <td><input type="text" /></td>
